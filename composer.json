{
    "name": "fsi/datasource-bundle",
    "type": "symfony-bundle",
    "description": "FSi DataSource Bundle",
    "keywords": ["fsi", "symfony", "datasource", "datasource-bundle", "bundle"],
    "license": "MIT",
    "authors": [
        {
            "name": "Lukasz Cybula",
            "email": "lukasz@fsi.pl"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "/home/piotr/projects/datasource-es-driver"
        }
    ],
    "require": {
        "php": ">=5.3.3",
        "twig/twig": "~1.2",
        "symfony/framework-bundle" : "~2.2",
        "symfony/yaml": "~2.2",
        "fsi/datasource": "1.2.*",
        "doctrine/orm": "~2.3",
        "doctrine/collections": "~1.0"
    },
    "require-dev": {
        "symfony/form" : "~2.2",
        "symfony/twig-bridge" : "~2.2",
        "phpunit/phpunit": "3.7.*",
        "friendsofsymfony/elastica-bundle": "3.0.*@dev",
        "fsi/datasource-elastica-driver": "dev-es"
    },
    "autoload": {
        "psr-0": { "FSi\\Bundle\\DataSourceBundle\\": "" }
    },
    "config": {
        "bin-dir": "bin"
    },
    "target-dir" : "FSi/Bundle/DataSourceBundle",
    "extra": {
        "branch-alias": {
            "dev-master": "1.3-dev"
        }  
    }
